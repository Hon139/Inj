{
  "manifest_version": 3,
  "name": "the quizzler",
  "version": "1.0",
  "description": "Adds quiz questions between Instagram reels",
  "permissions": ["storage", "scripting", "tabs", "webNavigation"],
  "host_permissions": ["https://www.instagram.com/reels/*"],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.instagram.com/reels/*"],
      "js": ["scripts/content.js"],
      "css": ["styles/content.css"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "images/quizzler.png"
  },
  "icons": {
    "16": "images/quizzler.png",
    "48": "images/quizzler.png",
    "128": "images/quizzler.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["images/quizzler.png"],
      "matches": ["https://www.instagram.com/*"]
    }
  ]
}